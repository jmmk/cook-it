<div class="row">
  <div class="large-12 columns">
    <h3><%= link_to "Create New Recipe", new_recipe_path %></h3>
    <h1 class="dark-on-light">Recipes:</h1>

    <div class="row">
      <div class="large-5 large-offset-1 columns">
        <%- @recipes.each do |recipe| -%>
          <h2><%= link_to recipe.title, recipe %></h2>
          <%- recipe.ingredients[0..2].each_with_index do |ingredient, index| -%>
            <p><%= ingredient.name %></p>
            <p><%= '...' if index == 2 %></p>
          <%- end -%>
        <%- end -%>
      </div>
    </div>

  </div>
</div>