<div class="row">

  <div class="large-4 columns">
    <h3><%= link_to "Create New Recipe", new_recipe_path %></h3>
  </div>

  <div class="large-4 large-offset-4 columns">
    <form>
      <input type="search" placeholder="Search Recipes...">
    </form>
  </div>

</div>

<div class="row">
  <div class="large-12 columns">
    <div class="panel radius">

      <div class="row">

        <div class="large-6 columns">
          <div class="panel radius">
            <h1 class="dark-on-light">Recent Recipes:</h1>
            <%- @recipes[0..2].each do |recipe| -%>
              <h2><%= link_to recipe.title, recipe if recipe.present? %></h2>
              <%- recipe.ingredients[0..2].each_with_index do |ingredient, index| -%>
                <p><%= ingredient.name %></p>
                <p><%= link_to '...', recipe if index == 2 %></p>
              <%- end -%>
            <%- end -%>
          </div>
        </div>

        <div class="large-6 columns">
          <%= image_tag('gramsay.jpg') %>
        </div>

      </div>

    </div>
  </div>
</div>